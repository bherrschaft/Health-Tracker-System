<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.LoginController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="10" vgap="10">

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Button text="Log In" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleLogin"/>
    <Button text="Create User" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#handleCreateUser"/>
</GridPane>
